section.working-on-container
    header
        h1.title-bar.working-on-title(translate="HOME.WORKING_ON_SECTION")

    .working-on(*ngIf="assignedTo.size")
        template(*ngFor="let duty of assignedTo")
            tg-duty.duty-single(
                [duty]="duty"
                type="working-on"
            )
    .working-on-empty(*ngIf="assignedTo.size === 0")
        p(translate="HOME.EMPTY_WORKING_ON")
        include empty.jade

section.watching-container
    header
        h1.title-bar.watching-title(translate="HOME.WATCHING_SECTION")

    .watching(*ngIf="watching.size")
        template(*ngFor="let duty of watching")
            tg-duty.duty-single(
                [duty]="duty"
                type="watching"
                "[class.blocked]"="duty.is_blocked"
            )

    .watching-empty(*ngIf="watching.size === 0")
        p(translate="HOME.EMPTY_WATCHING")
        include empty.jade
